<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" style="-fx-background-color: #325761;" styleClass="root-container" stylesheets="@../resource/css/root-container.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddSectionController">
   <children>
      <HBox fx:id="hBoxHeader" alignment="CENTER" style="-fx-background-color: #669933; -fx-background-radius: 5 5 0 0;" styleClass="child-container">
         <children>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" smooth="false">
               <image>
                  <Image url="@../resource/img/hub-round-big.png" />
               </image>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ImageView>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="25.0" style="-fx-background-color: #669933;" text="Add Section" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Button fx:id="btnClose" mnemonicParsing="false" onAction="#btnCloseClick" prefHeight="25.0" prefWidth="25.0" style="-fx-background-radius: 0 5 0 0;" styleClass="stage-button" stylesheets="@../resource/css/stage-buttons.css" HBox.hgrow="ALWAYS">
               <graphic>
                  <ImageView fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resource/img/x.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="1.0" left="2.0" right="2.0" top="2.0" />
         </VBox.margin>
      </HBox>
      <VBox style="-fx-background-color: #A2BB88; -fx-background-radius: 0 0 5 5;" stylesheets="@../resource/css/sub-stage-label.css">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" styleClass="sub-stage-label" text="Section Name" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <TextField fx:id="tfAddSection" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin></TextField>
            <Button fx:id="btnAddSection" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAddSectionClick" styleClass="control-button" stylesheets="@../resource/css/control-button.css" text="Add" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="2.0" left="2.0" right="2.0" top="1.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
